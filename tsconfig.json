{
    "compilerOptions": {
        "lib": [
            "dom",
            "es7"
        ],
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,              
        "baseUrl": ".",
        "paths": {
                "*": [ "./*" ],
                "pages/*": ["./pages/*"],
                "models/*": ["./models/*"],
                "test/*": ["./test/*"]
        },
        "types": ["@wdio/mocha-framework", "node", "@wdio/sync"]
    },    
    "include": [
      "./tests/**/*.ts",
    ],
  "exclude": [
      "./node_modules"
    ],
    "compileOnSave": false
}
